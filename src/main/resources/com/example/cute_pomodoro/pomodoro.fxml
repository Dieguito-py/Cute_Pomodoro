<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">
   <children>
      <Label text="Focus Time (minutes):" />
      <TextField fx:id="focusTimeField" />
      <Label text="Break Time (minutes):" />
      <TextField fx:id="breakTimeField" />
      <Button fx:id="startButton" text="Start" />
      <Label fx:id="timerLabel" style="-fx-font-size: 24px;" text="25:00" />
      <ProgressBar fx:id="progressBar" prefWidth="200" />
      <Button fx:id="pauseButton" text="Pause" />
   </children>
   <padding>
      <Insets bottom="20" left="20" right="20" top="20" />
   </padding>
</VBox>
