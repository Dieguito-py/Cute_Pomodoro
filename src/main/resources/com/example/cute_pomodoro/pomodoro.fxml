<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cute_pomodoro.PomodoroControler">
   <children>
      <Label text="Focus Time (minutes):" />
      <TextField fx:id="focusTimeField" />
      <Label text="Break Time (minutes):" />
      <TextField fx:id="breakTimeField" />
      <Button text="Start" fx:id="startButton" />
      <Label fx:id="timerLabel" text="25:00" style="-fx-font-size: 24px;" />
      <ProgressBar fx:id="progressBar" prefWidth="200" />
      <Button text="Pause" fx:id="pauseButton" />
   </children>
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>
</VBox>
